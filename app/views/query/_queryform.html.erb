<%= form_tag("/submit", method: "post ") do %>
  
  <div id="inner_form">

  <%= label_tag(:query_distance, "Target distance:") %>
  <%= text_field_tag 'query_distance', nil, class: "form-control" %>

  <%= label_tag(:age, "Age:") %>
  <%= text_field_tag 'age', nil, class: "form-control" %>

  <%= label_tag(:gender, "Gender:") %></br>
  <%= radio_button_tag 'gender', 'Male' %> <%= label :fitness, 'Male' %></br>
  <%= radio_button_tag 'gender', 'Female' %> <%= label :fitness, 'Female' %>

  </br>
  <%= label_tag(:fitness, "Fitness level:") %></br>
  <%= radio_button_tag 'fitness', 0 %> <%= label :fitness, 'Poor' %></br>
  <%= radio_button_tag 'fitness', 1 %> <%= label :fitness, 'Below average' %></br>
  <%= radio_button_tag 'fitness', 2 %> <%= label :fitness, 'Average' %></br>
  <%= radio_button_tag 'fitness', 3 %> <%= label :fitness, 'Ok' %></br>
  <%= radio_button_tag 'fitness', 4 %> <%= label :fitness, 'Yeah' %></br>
  <%= radio_button_tag 'fitness', 5 %> <%= label :fitness, 'Usain Bolt' %>

  <h3> Run 1: </h3>

  <%= label_tag(:distance, "Race distance:") %>
  <%= text_field_tag 'distance', nil, class: "form-control", name: "run[0][distance]" %>

  <%= label_tag(:hours, "Hours:") %>
  <%= text_field_tag 'hours', nil, class: "form-control", name: "run[0][hours]" %>
  
  <%= label_tag(:minutes, "Minutes:") %>
  <%= text_field_tag 'minutes', nil, class: "form-control", name: "run[0][minutes]" %>
  
  <%= label_tag(:seconds, "Seconds:") %>
  <%= text_field_tag 'seconds', nil, class: "form-control", name: "run[0][seconds]" %>

  <h3> Run 2: </h3>

  <%= label_tag(:distance, "Race distance:") %>
  <%= text_field_tag 'distance', nil, class: "form-control", name: "run[1][distance]" %>

  <%= label_tag(:hours, "Hours:") %>
  <%= text_field_tag 'hours', nil, class: "form-control", name: "run[1][hours]" %>
  
  <%= label_tag(:minutes, "Minutes:") %>
  <%= text_field_tag 'minutes', nil, class: "form-control", name: "run[1][minutes]" %>
  
  <%= label_tag(:seconds, "Seconds:") %>
  <%= text_field_tag 'seconds', nil, class: "form-control", name: "run[1][seconds]" %>

  </div>

  </br>
  <%= submit_tag "Submit", class: "form-control btn-success" %>
<% end %>
